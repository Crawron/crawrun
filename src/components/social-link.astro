---
type Props = {
	name: string
	handle: string
	link?: string
}

const { name, link, handle } = Astro.props
---

<div class="flex flex-row gap-4 items-center group transition-opacity">
	<!-- <div class="bg-accent-dark w-1 h-3 rounded-full flex-grow"></div> -->
	{
		link ? (
			<a href={link} target="_blank" class="flex flex-row gap-4">
				<span class="text-accent-dark font-semibold uppercase flex-shrink-0 group-hover:opacity-30 select-none group-hover:text-ink-dark transition-all">
					{name}
				</span>
				<span class="font-bold uppercase flex-shrink-0 group-hover:text-accent-dark transition-colors">
					{handle}
				</span>
			</a>
		) : (
			<>
				<span class="text-accent-dark font-semibold uppercase flex-shrink-0 group-hover:opacity-30 select-none group-hover:text-ink-dark transition-all">
					{name}
				</span>
				<span class="font-bold uppercase flex-shrink-0 group-hover:text-accent-dark transition-colors">
					{handle}
				</span>
			</>
		)
	}
</div>
